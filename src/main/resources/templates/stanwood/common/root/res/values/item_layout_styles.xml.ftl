<resources>
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SingleLineText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
